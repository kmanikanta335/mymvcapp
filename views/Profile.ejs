<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <style>
        table {
            width: 50%;
            border-collapse: collapse;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid white;
            padding: 10px;
            text-align: center;
            color: #fff;
        }
       
    </style>
</head>
<body style="background-color: black;">
    <center>
        <h1>Employee List</h1>
        <table>
            <thead>
                <tr>
                    <th>EID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (empList && empList.length > 0) { %>
                    <% empList.forEach(employee => { %>
                        <tr>
                            <td><%= employee.eid %></td>
                            <td><%= employee.ename %></td>
                            <td><%= employee.email %></td>
                            <td><a href="http://localhost:8000/web/update?id=<%= employee.eid %>">Update</a></td>
                            <td><a href="http://localhost:8000/web/delete?id=<%= employee.eid %>">Delelte</a></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No employees found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </center>
</body>
</html>
